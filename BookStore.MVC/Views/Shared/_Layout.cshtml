<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Kitap Mağazası</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/electro-modern.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookStore.MVC.styles.css" asp-append-version="true" />
</head>
<body>
    @{
        var userId = Context.Session.GetString("UserId");
        var username = Context.Session.GetString("Username");
        var userRole = Context.Session.GetString("UserRole");
    }

    <!-- Header Top -->
    <div class="header-top">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="d-flex align-items-center text-white">
                        <i class="fas fa-phone me-2"></i>
                        <span>+90 212 123 45 67</span>
                        <span class="mx-3">|</span>
                        <i class="fas fa-envelope me-2"></i>
                        <span>enesor.61.54@gmail.com</span>
                    </div>
                </div>
                <div class="col-md-6 text-end">
                    <div class="d-flex align-items-center justify-content-end text-white">
                        <span class="me-3">Ücretsiz Kargo 150₺ ve Üzeri!</span>
                        @if (!string.IsNullOrEmpty(userId))
                        {
                            <span>Hoş geldin, @(username ?? "Kullanıcı")!</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Header -->
    <header class="main-header">
        <div class="container">
            <div class="row align-items-center py-3">
                <div class="col-lg-2 col-md-3 col-6">
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-book-open me-2"></i>
                        KitapStore
                    </a>
                </div>
                <div class="col-lg-6 col-md-5 col-12 order-md-2 order-3">
                    <div class="search-box mx-auto">
                        <div class="input-group">
                            <input type="text" class="form-control search-input" placeholder="Kitap, yazar ara...">
                            <button class="btn search-btn" type="button">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-6 order-md-3 order-2">
                    <div class="header-icons justify-content-end">
                        @if (!string.IsNullOrEmpty(userId))
                        {
                            <a href="@Url.Action("Index", "Favorites")" class="header-icon" title="Favoriler">
                                <i class="fas fa-heart"></i>
                                <span class="icon-badge" id="favorites-count">0</span>
                            </a>
                        }
                        <a href="@Url.Action("Index", "Cart")" class="header-icon" title="Sepet">
                            <i class="fas fa-shopping-cart"></i>
                            <span class="icon-badge" id="cart-count">0</span>
                        </a>
                        @if (!string.IsNullOrEmpty(userId))
                        {
                            <div class="dropdown">
                                <a class="header-icon dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user me-2"></i>
                                    <span class="d-none d-lg-inline">@(username ?? "Kullanıcı")</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    @if (userRole == "Admin")
                                    {
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="Index">
                                            <i class="fas fa-cog me-2"></i>Admin Panel
                                        </a></li>
                                    }
                                    <li><a class="dropdown-item" asp-controller="Auth" asp-action="Logout">
                                        <i class="fas fa-sign-out-alt me-2"></i>Çıkış Yap
                                    </a></li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <a href="@Url.Action("Login", "Auth")" class="header-icon" title="Giriş Yap">
                                <i class="fas fa-user"></i>
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Navigation Menu -->
    <nav class="nav-menu">
        <div class="container">
            <div class="navbar navbar-expand-lg">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i>Anasayfa
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Books" asp-action="Index">
                                <i class="fas fa-book me-1"></i>Tüm Kitaplar
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Categories" asp-action="Index">
                                <i class="fas fa-list me-1"></i>Kategoriler
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="About">
                                <i class="fas fa-info-circle me-1"></i>Hakkımızda
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Contact">
                                <i class="fas fa-phone me-1"></i>İletişim
                            </a>
                        </li>
                        @if (string.IsNullOrEmpty(userId))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Auth" asp-action="Login">
                                    <i class="fas fa-sign-in-alt me-1"></i>Giriş Yap
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Auth" asp-action="Register">
                                    <i class="fas fa-user-plus me-1"></i>Üye Ol
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="main-content">
        <div class="container">
            @if (TempData["Message"] != null)
            {
                <div class="alert alert-custom alert-success-custom alert-dismissible fade show mt-3" role="alert">
                    <i class="fas fa-check-circle me-2"></i>
                    @TempData["Message"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-custom alert-danger-custom alert-dismissible fade show mt-3" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-custom alert-success-custom alert-dismissible fade show mt-3" role="alert">
                    <i class="fas fa-check-circle me-2"></i>
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @RenderBody()
        </div>
    </main>

    <!-- Modern Footer -->
    <footer class="main-footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="footer-section">
                        <h5>
                            <i class="fas fa-book-open me-2"></i>
                            KitapStore
                        </h5>
                        <p class="text-muted mb-3">Türkiye'nin en kapsamlı online kitap mağazası. Binlerce kitap, en uygun fiyatlarla kapınızda!</p>
                        <div class="social-links">
                            <a href="#" class="me-3 text-white"><i class="fab fa-facebook-f"></i></a>
                            <a href="#" class="me-3 text-white"><i class="fab fa-twitter"></i></a>
                            <a href="#" class="me-3 text-white"><i class="fab fa-instagram"></i></a>
                            <a href="#" class="me-3 text-white"><i class="fab fa-youtube"></i></a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-2 col-md-6 mb-4">
                    <div class="footer-section">
                        <h5>Kurumsal</h5>
                        <ul>
                            <li><a asp-controller="Home" asp-action="About">Hakkımızda</a></li>
                            <li><a asp-controller="Home" asp-action="Contact">İletişim</a></li>
                            <li><a href="#">Kariyer</a></li>
                            <li><a href="#">Basın</a></li>
                            <li><a href="#">Yatırımcı İlişkileri</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-2 col-md-6 mb-4">
                    <div class="footer-section">
                        <h5>Kategoriler</h5>
                        <ul>
                            <li><a asp-controller="Categories" asp-action="Index">Tüm Kategoriler</a></li>
                            <li><a href="#">Roman</a></li>
                            <li><a href="#">Bilim Kurgu</a></li>
                            <li><a href="#">Tarih</a></li>
                            <li><a href="#">Çocuk Kitapları</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-2 col-md-6 mb-4">
                    <div class="footer-section">
                        <h5>Müşteri Hizmetleri</h5>
                        <ul>
                            <li><a href="#">Sipariş Takibi</a></li>
                            <li><a href="#">İade & Değişim</a></li>
                            <li><a href="#">Kargo Bilgileri</a></li>
                            <li><a href="#">SSS</a></li>
                            <li><a href="#">Canlı Destek</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-3 col-md-12 mb-4">
                    <div class="footer-section">
                        <h5>Bülten</h5>
                        <p class="text-muted mb-3">Yeni çıkan kitaplar ve kampanyalardan haberdar olun!</p>
                        <div class="newsletter">
                            <div class="input-group">
                                <input type="email" class="form-control" id="newsletter-email" placeholder="E-posta adresiniz">
                                <button class="btn btn-primary-custom" type="button" onclick="subscribeNewsletter()">
                                    <i class="fas fa-paper-plane"></i>
                                </button>
                            </div>
                        </div>
                        <div class="mt-3">
                            <div class="d-flex align-items-center text-white mb-2">
                                <i class="fas fa-phone me-2"></i>
                                <span>+90 212 123 45 67</span>
                            </div>
                            <div class="d-flex align-items-center text-white">
                                <i class="fas fa-envelope me-2"></i>
                                <span>enesor.61.54@gmail.com</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="footer-bottom">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <p>&copy; 2025 KitapStore. Tüm hakları saklıdır.</p>
                    </div>
                    <div class="col-md-6 text-end">
                        <div class="d-flex justify-content-end align-items-center">
                            <span class="me-3">Güvenli Ödeme:</span>
                            <i class="fab fa-cc-visa me-2"></i>
                            <i class="fab fa-cc-mastercard me-2"></i>
                            <i class="fab fa-cc-paypal"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Toast Container -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3"></div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/electro-modern.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

