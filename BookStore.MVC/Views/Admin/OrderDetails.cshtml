@{
    ViewData["Title"] = "Sipariş Detayları";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>@ViewBag.Title</h1>
                <a href="@Url.Action("Orders", "Admin")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Geri
                </a>
            </div>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["Error"]
                </div>
            }
        </div>
    </div>

    @if (ViewBag.Order != null)
    {
        var order = ViewBag.Order;
        
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Sipariş Bilgileri</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Sipariş ID:</strong> @order.Id</p>
                                <p><strong>Sipariş Tarihi:</strong> @order.OrderDate.ToString("dd.MM.yyyy HH:mm")</p>
                                <p><strong>Durum:</strong> 
                                    <span class="badge bg-@(order.Status == "Tamamlandı" ? "success" : order.Status == "Beklemede" ? "warning" : "secondary")">
                                        @order.Status
                                    </span>
                                </p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Kullanıcı:</strong> @(order.User?.Username ?? "Bilinmeyen Kullanıcı")</p>
                                <p><strong>E-posta:</strong> @(order.User?.Email ?? "Bilinmiyor")</p>
                                <p><strong>Toplam Tutar:</strong> ₺@order.TotalAmount.ToString("F2")</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mt-4">
                    <div class="card-header">
                        <h5>Sipariş Detayları</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Kitap</th>
                                        <th>Yazar</th>
                                        <th>Adet</th>
                                        <th>Birim Fiyat</th>
                                        <th>Toplam</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (order.OrderDetails != null && order.OrderDetails.Count > 0)
                                    {
                                        @foreach (var detail in order.OrderDetails)
                                        {
                                            <tr>
                                                <td>@(detail.Book?.Title ?? "Bilinmeyen Kitap")</td>
                                                <td>@(detail.Book?.Author ?? "Bilinmeyen Yazar")</td>
                                                <td>@detail.Quantity</td>
                                                <td>₺@detail.Price.ToString("F2")</td>
                                                <td>₺@((detail.Price * detail.Quantity).ToString("F2"))</td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="5" class="text-center">Sipariş detayı bulunamadı.</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="alert alert-warning">
                    Sipariş bulunamadı.
                </div>
            </div>
        </div>
    }
</div>
