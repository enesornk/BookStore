@model List<BookStore.Shared.Models.Book>
@{
    ViewData["Title"] = "Kitap Yönetimi";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>@ViewBag.Title</h1>
                <a href="@Url.Action("CreateBook", "Admin")" class="btn btn-success">
                    <i class="fas fa-plus"></i> Yeni Kitap Ekle
                </a>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">
                    @TempData["Success"]
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["Error"]
                </div>
            }
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Başlık</th>
                                    <th>Yazar</th>
                                    <th>Kategori</th>
                                    <th>Fiyat</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.Books != null)
                                {
                                    @foreach (var book in ViewBag.Books)
                                    {
                                        <tr>
                                            <td>@book.Id</td>
                                            <td>@book.Title</td>
                                            <td>@book.Author</td>
                                            <td>@(book.Category?.Name ?? "Kategori Yok")</td>
                                            <td>₺@book.Price.ToString("F2")</td>
                                            <td>
                                                <a href="@Url.Action("EditBook", "Admin", new { id = book.Id })" class="btn btn-sm btn-primary">
                                                    <i class="fas fa-edit"></i> Düzenle
                                                </a>
                                                <form asp-action="DeleteBook" method="post" style="display: inline;">
                                                    <input type="hidden" name="id" value="@book.Id" />
                                                    <button type="submit" class="btn btn-sm btn-danger" 
                                                            onclick="return confirm('Bu kitabı silmek istediğinizden emin misiniz?')">
                                                        <i class="fas fa-trash"></i> Sil
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 